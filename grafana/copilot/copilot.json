    {
      "id": 12,
      "title": "Create Profile",
      "type": "marcusolsson-dynamictext-panel",
      "gridPos": {
        "h": 4,
        "w": 24,
        "x": 0,
        "y": 41
      },
      "options": {
        "content": "",
        "defaultContent": "<div style=\"display:flex;align-items:center;gap:16px;padding:4px 0\">\n  <button id=\"createProfileBtn\" style=\"background:#3274d9;color:#fff;border:none;border-radius:4px;padding:8px 20px;font-size:14px;cursor:pointer;white-space:nowrap\">üì∏ Create Profile</button>\n  <span id=\"profileStatus\" style=\"font-size:13px;color:#aaa\">Snapshots the current time range. Set Cluster ID, Namespace, Task Queue, and Profile Label above.</span>\n</div>",
        "editor": {
          "format": "html",
          "language": "html"
        },
        "everyRow": false,
        "wrap": true,
        "afterRender": "const btn = document.getElementById('createProfileBtn');\nconst status = document.getElementById('profileStatus');\nif (!btn || btn.dataset.bound) return;\nbtn.dataset.bound = 'true';\n\nbtn.addEventListener('click', async () => {\n  const body = {\n    name: 'profile-' + new Date().toISOString().slice(0,19),\n    cluster_id: context.grafana.replaceVariables('${cluster_id}'),\n    time_window_start: context.grafana.replaceVariables('${__from:date:iso}'),\n    time_window_end: context.grafana.replaceVariables('${__to:date:iso}'),\n    namespace: context.grafana.replaceVariables('${namespace}') || null,\n    task_queue: context.grafana.replaceVariables('${task_queue}') || null,\n    label: context.grafana.replaceVariables('${profile_label}') || null\n  };\n\n  btn.disabled = true;\n  btn.textContent = '\\u23f3 Creating\\u2026';\n  status.textContent = 'Collecting telemetry from Prometheus\\u2026';\n  status.style.color = '#aaa';\n\n  try {\n    const resp = await fetch('/api/datasources/proxy/uid/copilot/profiles/', {\n      method: 'POST',\n      headers: { 'Content-Type': 'application/json' },\n      body: JSON.stringify(body)\n    });\n    if (!resp.ok) {\n      const err = await resp.text();\n      throw new Error(resp.status + ': ' + err.slice(0, 200));\n    }\n    const result = await resp.json();\n    status.textContent = '\\u2705 Profile created: ' + result.name + ' (id: ' + result.id.slice(0,8) + '\\u2026)';\n    status.style.color = '#73bf69';\n    context.grafana.notifySuccess(['Profile Created', result.name]);\n    setTimeout(() => context.grafana.refresh(), 1000);\n  } catch (e) {\n    status.textContent = '\\u274c ' + e.message;\n    status.style.color = '#f2495c';\n    context.grafana.notifyError(['Profile Creation Failed', e.message]);\n  } finally {\n    btn.disabled = false;\n    btn.textContent = '\\ud83d\\udcf8 Create Profile';\n  }\n});"
      },
      "fieldConfig": {
        "defaults": {},
        "overrides": []
      },
      "description": "Click to create a Behaviour Profile from the current dashboard time range. Shows success/failure feedback and refreshes the profile list."
    },
